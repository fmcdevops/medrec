<!DOCTYPE ejb-jar PUBLIC
'-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN'
'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <enterprise-beans>
    <session>
      <ejb-name>MedRecWebServicesEJB</ejb-name>
      <home>com.bea.medrec.webservices.MedRecWebServicesHome</home>
      <remote>com.bea.medrec.webservices.MedRecWebServices</remote>
      <ejb-class>com.bea.medrec.webservices.MedRecWebServicesEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-ref>
        <ejb-ref-name>ejb/adminsession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.bea.medrec.controller.AdminSessionHome</home>
        <remote>com.bea.medrec.controller.AdminSession</remote>
        <ejb-link>AdminSessionEJB</ejb-link>
      </ejb-ref>
      <ejb-ref>
        <ejb-ref-name>ejb/patientsession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.bea.medrec.controller.PatientSessionHome</home>
        <remote>com.bea.medrec.controller.PatientSession</remote>
        <ejb-link>PatientSessionEJB</ejb-link>
      </ejb-ref>
      <ejb-ref>
        <ejb-ref-name>ejb/recordsession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.bea.medrec.controller.RecordSessionHome</home>
        <remote>com.bea.medrec.controller.RecordSession</remote>
        <ejb-link>RecordSessionEJB</ejb-link>
      </ejb-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>MedRecWebServicesEJB</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
